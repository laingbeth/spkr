<p id="notice"><%= notice %></p>

<h1>Listing Speakers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Headline</th>
      <th>Contact</th>
      <th>Topic</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.name %></td>
        <td><%= speaker.headline %></td>
        <td><%= speaker.contact %></td>
        <td><%= speaker.topic %></td>
        <td><%= speaker.description %></td>
        <td><%= image_tag @speaker.avatar.url(:thumb) %></td>
          

        <td><%= link_to 'Show', speaker %></td>
       <!--  <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
        <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

